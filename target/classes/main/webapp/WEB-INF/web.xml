<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>com.simplilearn.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ReadStudents</servlet-name>
  	<display-name>ReadStudents</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlets.ReadStudents</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ReadClasses</servlet-name>
  	<display-name>ReadClasses</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlets.ReadClasses</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ReadTeachers</servlet-name>
  	<display-name>ReadTeachers</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlets.ReadTeachers</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ReadSubjects</servlet-name>
  	<display-name>ReadSubjects</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlets.ReadSubjects</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateSubjectServlet</servlet-name>
  	<display-name>CreateSubjectServlet</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlets.CreateSubjectServlet</servlet-class>
  </servlet>
    <servlet>
  	<servlet-name>CreateTeacherServlet</servlet-name>
  	<display-name>CreateTeacherServlet</display-name>
  	<description></description>
  	<servlet-class>com.simplilearn.servlets.CreateTeacherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ReadStudents</servlet-name>
  	<url-pattern>/students</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ReadClasses</servlet-name>
  	<url-pattern>/classes</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ReadTeachers</servlet-name>
  	<url-pattern>/teachers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ReadSubjects</servlet-name>
  	<url-pattern>/subjects</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateSubjectServlet</servlet-name>
  	<url-pattern>/createSubject</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
  	<servlet-name>CreateTeacherServlet</servlet-name>
  	<url-pattern>/createTeacher</url-pattern>
  </servlet-mapping>
</web-app>
